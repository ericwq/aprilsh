name="apshd"
description="server daemon for the apshd service"

command=/usr/bin/apshd
command_args="-verbose 1 2>> /tmp/apshd.log"
command_user=utmp
command_background=yes
directory=/run/utmps
pidfile=/run/utmps/utmpd.pid

depend() {
	need utmp-prepare
	after bootmisc
	before networking
}

start_pre() {
	checkpath -d -o utmp:utmp -m 0755 /run/utmps
}
